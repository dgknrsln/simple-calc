<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dgknrsln.hesapmakinesi.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/textView"
        android:textSize="36sp"
        android:textAlignment="viewEnd"
        android:typeface="monospace"
        android:fontFamily="monospace"
        android:textColor="@android:color/holo_red_light"
        android:layout_height="100dp" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="two" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="six"
        android:layout_above="@+id/button17"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="seven"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="zero"
        android:layout_below="@+id/button17"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="รท"
        android:layout_height="wrap_content"
        android:id="@+id/button14"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:onClick="divide"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:onClick="multiply"
        android:layout_above="@+id/button14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:onClick="substract"
        android:layout_above="@+id/button13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="36sp"
        android:onClick="add"
        android:layout_above="@+id/button10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button17"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="nine"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="three"
        android:layout_alignBaseline="@+id/button12"
        android:layout_alignBottom="@+id/button12"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="eight"
        android:layout_alignBaseline="@+id/button17"
        android:layout_alignBottom="@+id/button17"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="five"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="four"
        android:layout_above="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_green_light"
        android:textSize="36sp"
        android:onClick="one"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:onClick="delete"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:text="AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:onClick="allClear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:visibility="visible"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:onClick="result"
        android:layout_above="@+id/button12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
